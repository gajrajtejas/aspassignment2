<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" /> <!-- Define the document's character encoding -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" /> <!-- Setting the viewport to make the site responsive -->
    <title>@ViewData["Title"]Top MOVIES</title> <!-- Page title -->
    <!-- Link to Bootstrap CSS file -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Link to custom CSS file -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <!-- Start of the navigation bar -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <!-- Navigational link to homepage -->
                <a class="navbar-brand" asp-area="" asp-controller="Pages" asp-action="Index">Top 10 Movies</a>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav .ms-auto order-0">
                        <!-- Navigational link to Game List -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pages" asp-action="Index">Movie List</a>
                        </li>
                        <!-- Navigational link to About page -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pages" asp-action="About">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- Main content container -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() <!-- Place to render the content of child views -->
        </main>
    </div>

    <!-- Footer section -->
    <footer class="border-top footer text-muted py-3">
        <div class="container text-center">
            <!-- Footer text -->
            <p class="mb-0">&copy; 2023 All rights reserved to <a href="https://www.nintendo.com" target="_blank">Movie list</a></p>
        </div>
    </footer>

    <!-- Including jQuery library -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <!-- Including Bootstrap's JavaScript plugins -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>